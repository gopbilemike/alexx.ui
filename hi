<script>
function start() {
  const t = document.getElementById("term");
  t.textContent += "\n> INITIALIZING MODULES...";
  setTimeout(()=>t.textContent += "\n> CONNECTION SIMULATED",800);
  setTimeout(()=>t.textContent += "\n> ERROR: ANOMALY DETECTED",1600);
}
</script>

